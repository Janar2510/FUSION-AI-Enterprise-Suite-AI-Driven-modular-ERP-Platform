# FusionAI Enterprise Suite Environment Variables

# Application
NODE_ENV=development
APP_NAME=FusionAI Enterprise Suite
APP_VERSION=1.0.0
DEBUG=true

# Database
DATABASE_URL=postgresql://fusionai_user:fusionai_password@localhost:5432/fusionai_erp
REDIS_URL=redis://localhost:6379/0
QDRANT_URL=http://localhost:6333

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email
EMAIL_USERNAME=your_email_username
EMAIL_PASSWORD=your_email_password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=fusionai-storage
AWS_REGION=us-east-1

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=INFO

# Frontend
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
VITE_APP_NAME=FusionAI Enterprise Suite

# Development
HOT_RELOAD=true
AUTO_MIGRATE=true
SEED_DATA=true




